@page
@model TestCRUD.Pages.Clients.IndexModel
@{
}

<br>
<h2>List Of Task</h2>
<a class="btn btn-primary btn-sm" href="/Clients/Create">New Task</a>
<br>
<form method="get">
	<div class="input-group mt-3">
		<input class="form-control" asp-for="SearchTerm"/>
		<div class="input-group-append">
			<button type="submit" class="btn btn-primary">Search</button>
		</div>
	</div>
</form>

<table class="table">
	<thead>
		<tr>
			<th>ID</th>
			<th>Title</th>
			<th>Description</th>
			<th>Status</th>
			<th>Created At</th>
			<th>Updated At</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var item in Model.ListCLients)
		{
			<tr>
				<td>@item.id</td>
				<td>@item.title</td>
				<td>@item.description</td>
				<td>@item.status</td>
				<td>@item.created_at</td>
				<td>@item.updated_at</td>
				<td>
					<a class="btn btn-primary btn-sm" href="/Clients/Edit?id=@item.id">Edit</a>
					<a class="btn btn-danger btn-sm" href="/Clients/Delete?id=@item.id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
